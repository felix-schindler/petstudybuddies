<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="A1" fileName="A1.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="SelectQuery" fileName="SelectQuery.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="DeleteQuery" fileName="DeleteQuery.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="InsertQuery" fileName="InsertQuery.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <File name="UpdateQuery" fileName="UpdateQuery.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>


    </Appenders>
    <Loggers>

        <!-- You my want to define class or package level per-logger rules -->
        <Logger name="GuiDriver" level="debug">
            <AppenderRef ref="A1"/>
        </Logger>
        <Logger name="SelectLogger" level="debug">
            <AppenderRef ref="SelectQuery"/>
        </Logger>
        <Logger name="InsertLogger" level="debug">
            <AppenderRef ref="InsertQuery"/>
        </Logger>
        <Logger name="UpdateLogger" level="debug">
            <AppenderRef ref="UpdateQuery"/>
        </Logger>
        <Logger name="DeleteLogger" level="debug">
            <AppenderRef ref="DeleteQuery"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>

    </Loggers>
</Configuration>