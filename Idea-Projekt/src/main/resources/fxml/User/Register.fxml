<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #030307;" xmlns="http://javafx.com/javafx/16"
            fx:controller="de.hdm_stuttgart.mi.PetStudyBuddies.Controller.RegisterController">
    <children>
        <Pane layoutY="-1.0" prefHeight="79.0" prefWidth="995.0" style="-fx-background-radius: 15 15 0 0;"
              styleClass="linear-grad" stylesheets="@../../styles/fullpackstyling.css">
            <children>
                <Label layoutX="690.0" layoutY="1.0" prefHeight="79.0" prefWidth="224.0" text="Welcome">
                    <font>
                        <Font name="Calibri" size="43.0"/>
                    </font>
                </Label>
                <Label layoutX="176.0" minHeight="79.0" minWidth="164.0" prefHeight="79.0" text="PetStuddyBuddies"
                       textAlignment="CENTER">
                    <font>
                        <Font name="Calibri" size="21.0"/>
                    </font>
                </Label>
                <ImageView fitHeight="75.0" fitWidth="79.0" layoutX="84.0" layoutY="1.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@../../images/ToDoListDashboardImages/icons8-lehrplan-160.png"/>
                    </image>
                </ImageView>
            </children>
        </Pane>
        <VBox prefHeight="609.0" prefWidth="79.0"
              style="-fx-background-color: #131022; -fx-background-radius: 15 0 0 15;">
            <children>
                <Pane prefHeight="79.0" prefWidth="74.0" style="-fx-background-radius: 15 0 15 15;"/>
                <Button fx:id="LoginView" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleMenu"
                        prefHeight="66.0" prefWidth="80.0" styleClass="button3"
                        stylesheets="@../../styles/fullpackstyling.css" text="Login" textFill="#a868a0">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/User/login.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="Calibri" size="12.0"/>
                    </font>
                </Button>
                <Button fx:id="RegisterView" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleMenu"
                        prefHeight="66.0" prefWidth="81.0" styleClass="button3"
                        stylesheets="@../../styles/fullpackstyling.css" text="Register" textFill="#a868a0">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/User/register.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="Calibri" size="12.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
        <AnchorPane layoutX="91.0" layoutY="87.0" prefHeight="513.0" prefWidth="884.0"
                    style="-fx-background-color: #131022; -fx-background-radius: 10;"
                    stylesheets="@../../styles/fullpackstyling.css">
            <children>
                <Label layoutX="14.0" layoutY="14.0" prefHeight="32.0" text="please register" textFill="#a868a0">
                    <font>
                        <Font name="Calibri" size="34.0"/>
                    </font>
                </Label>
                <Pane layoutX="771.0" layoutY="391.0" prefHeight="100.0" prefWidth="103.0"
                      style="-fx-background-color: #1A172A; -fx-background-radius: 10;">
                    <children>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
                            <children>
                                <Button alignment="BOTTOM_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                                        onAction="#register" prefHeight="84.0" prefWidth="93.0" styleClass="button5"
                                        stylesheets="@../../styles/fullpackstyling.css" text="Register">
                                    <graphic>
                                        <ImageView fitHeight="55.0" fitWidth="81.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@../../images/User/login.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </Pane>
                <Pane layoutX="30.0" layoutY="106.0" prefHeight="376.0" prefWidth="701.0">
                    <children>
                        <VBox alignment="TOP_CENTER" prefWidth="701.0" spacing="10.0">
                            <children>
                                <TextField fx:id="emailField" promptText="EMail..."/>
                                <TextField fx:id="usernameField" promptText="Username..."/>
                                <PasswordField fx:id="passwordField" promptText="Password..."/>
                                <PasswordField fx:id="repeatPasswordField" promptText="Repeat password..."/>
                                <Label fx:id="statusLabel"/>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
